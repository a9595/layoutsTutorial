<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ppjtest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.layouts.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.layouts.LinearActivity"
            android:label="Linear" >
            <intent-filter>
                <action android:name="com.layoutTutorial.showLinear"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.layouts.TableActivity"
            android:label="Table" >
        </activity>
        <activity
            android:name="com.example.layouts.RelativeActivity"
            android:label="Relative" >
        </activity>
        <activity
            android:name="com.example.layouts.AbsoluteActivity"
            android:label="Absolute" >
        </activity>        
    </application>

</manifest>